<div class="card mb-4 shadow-sm">
  <div class="card-header bg-light">
    <h4 class="mb-0"><%= @subject.name %> (<%= @subject.number_of_units %> Units)</h4>
    <p class="mb-0 text-muted">Teacher: <%= @subject.teacher.name %></p>
  </div>
</div>
<% @subject.sections.each do |section| %>
  <div class="card mb-4 shadow-sm">
    <div class="card-header">
      <h5 class="mb-1">Section: <%= section.name %></h5>
      <small class="text-muted">
        Room: <%= section.room %> • Time Slot: <%= section.time_slot %> • Students: <%= section.number_of_students %>
      </small>
    </div>

    <div class="card-body p-0">
      <table class="table table-bordered table-striped mb-0">
        <thead class="table-light">
          <tr>
            <th>Student Name</th>
            <th>Program</th>
            <th>Year Level</th>
          </tr>
        </thead>
        <tbody>
          <% section.classlists.each do |classlist| %>
            <tr>
              <td><%= classlist.student.name %></td>
              <td><%= classlist.student.program %></td>
              <td><%= classlist.student.year_level %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-between mt-4">
  <div>
    <%= link_to "← Back to Subjects", subjects_path, class: "btn btn-secondary" %>
  </div>
  <div class="btn-group">
    <%= link_to "Edit Subject", edit_subject_path(@subject), class: "btn btn-warning" %>
    <%= button_to "Delete", @subject, method: :delete,
          data: { confirm: "Are you sure you want to delete this subject?" },
          class: "btn btn-danger" %>
  </div>
</div>