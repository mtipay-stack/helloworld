<% content_for :title, "Student Details" %>

<div class="bg-info-subtle min-vh-100 py-4">
  <div class="container">

    <!-- Student Info Card -->
    <div class="card shadow-sm border-0 rounded-4 mb-4">
      <div class="card-header bg-primary text-white rounded-top-4">
        <h4 class="mb-0">
          🎓 <%= @student.name %>
        </h4>
      </div>
      <div class="card-body bg-light">
        <div class="row mb-3">
          <div class="col-md-6">
            <p class="mb-1 fw-semibold text-secondary">📘 Year Level:</p>
            <p class="fs-5 fw-bold text-dark"><%= @student.year_level %></p>
          </div>
          <div class="col-md-6">
            <p class="mb-1 fw-semibold text-secondary">🎯 Program:</p>
            <p class="fs-5 fw-bold text-dark"><%= @student.program %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Subjects Table -->
    <div class="card shadow-sm border-0 rounded-4">
      <div class="card-header bg-white border-bottom border-2">
        <h5 class="mb-0 text-primary fw-bold">📚 List of Subjects</h5>
      </div>
      <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-primary">
            <tr>
              <th>Name</th>
              <th>Section</th>
              <th>Units</th>
              <th>Teacher</th>
            </tr>
          </thead>
          <tbody>
            <% @student.classlists.each do |classlist| %>
              <tr>
                <td><%= classlist.section.subject.name %></td>
                <td><%= classlist.section.name %></td>
                <td><%= classlist.section.subject.number_of_units %></td>
                <td><%= classlist.section.subject.teacher.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between align-items-center mt-4">
      <%= link_to "← Back to Students", students_path, class: "btn btn-outline-secondary px-4 py-2" %>

      <div class="btn-group">
        <%= link_to "✏️ Edit Student", edit_student_path(@student), class: "btn btn-warning px-4" %>
        <%= button_to "🗑️ Delete", @student,
              method: :delete,
              data: { confirm: "Are you sure you want to delete this student?" },
              class: "btn btn-danger px-4" %>
      </div>
    </div>

  </div>
</div>
